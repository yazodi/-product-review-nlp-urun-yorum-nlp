    "def extract_keywords(text, max_keywords=3):\n",
    "    kw_extractor = yake.KeywordExtractor(lan=\"tr\", top=max_keywords, features=None)\n",
    "    keywords = kw_extractor.extract_keywords(text)\n",
    "    return [kw for kw, score in keywords]\n"
